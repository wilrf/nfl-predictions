# NFL Betting Suggestion System Environment Variables
# Copy this file to .env and fill in your actual values

# The Odds API Configuration
# Sign up for free at: https://the-odds-api.com/
# Free tier: 500 requests/month
# Paid tier ($30/month): 10,000 requests/month
ODDS_API_KEY=your_api_key_here

# Database Configuration
# SQLite database path (relative to project root)
DATABASE_PATH=database/nfl_suggestions.db

# Model Configuration
# Path to saved XGBoost models
MODELS_DIR=models/saved_models/

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/nfl_system.log

# System Configuration
# Maximum bets per week
MAX_WEEKLY_BETS=20

# Minimum edge required (2% = 0.02)
MIN_EDGE=0.02

# Maximum Kelly fraction (25% = 0.25)
MAX_KELLY=0.25

# Bankroll (for calculating bet sizes)
BANKROLL=10000

# API Rate Limiting (Free Tier)
# Daily limit for free tier (500/month â‰ˆ 16/day)
DAILY_API_LIMIT=16

# CLV Tracking
# Day and hour to capture closing lines (0=Monday, 6=Sunday)
CLV_CAPTURE_DAY=6
CLV_CAPTURE_HOUR=9