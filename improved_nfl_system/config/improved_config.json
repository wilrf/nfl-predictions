{
  "system_version": "2.0.0",
  "mode": "production",
  
  "data_sources": {
    "primary_feed": "nfl_data_py",
    "odds_sources": {
      "sharp_books": ["pinnacle", "circa", "bookmaker"],
      "soft_books": ["draftkings", "fanduel", "betmgm", "caesars"],
      "api_keys": {
        "odds_api": "${ODDS_API_KEY}",
        "weather_api": "${WEATHER_API_KEY}"
      }
    },
    "cache_config": {
      "redis_host": "localhost",
      "redis_port": 6379,
      "ttl_seconds": 3600
    }
  },
  
  "model_config": {
    "ensemble_weights": {
      "xgboost": 0.35,
      "random_forest": 0.25,
      "neural_net": 0.20,
      "elo_rating": 0.15,
      "market_consensus": 0.05
    },
    "validation": {
      "method": "time_series_split",
      "n_splits": 5,
      "test_size_weeks": 2,
      "calibration_method": "isotonic",
      "min_samples_for_training": 100
    },
    "hyperparameter_tuning": {
      "enabled": true,
      "frequency": "monthly",
      "method": "bayesian_optimization",
      "n_trials": 50
    }
  },
  
  "features": {
    "decay_factor": 0.1,
    "rolling_windows": [3, 5, 10],
    "feature_categories": {
      "team_performance": [
        "yards_per_play_weighted",
        "epa_per_play",
        "success_rate",
        "dvoa_offense",
        "dvoa_defense"
      ],
      "market_derived": [
        "line_movement",
        "pinnacle_consensus",
        "sharp_money_divergence",
        "closing_line_prediction",
        "reverse_line_movement"
      ],
      "situational": [
        "rest_advantage",
        "travel_fatigue",
        "division_rivalry",
        "revenge_game",
        "prime_time_performance"
      ],
      "matchup_specific": [
        "offensive_vs_defensive_efficiency",
        "pace_differential",
        "strength_of_schedule_adjusted",
        "weather_impact_score"
      ]
    }
  },
  
  "betting_strategy": {
    "minimum_edge": 0.02,
    "clv_target": 0.02,
    "bet_timing": {
      "preferred_days": ["tuesday", "wednesday", "thursday"],
      "avoid_days": ["sunday_morning"],
      "monitor_steam": true,
      "steam_threshold": 1.0
    }
  },
  
  "kelly_criterion": {
    "max_kelly_fraction": 0.25,
    "correlation_adjustment": true,
    "monte_carlo_simulations": 10000,
    "max_single_bet_pct": 0.05,
    "min_bankroll_reserve": 0.20
  },
  
  "risk": {
    "max_weekly_bets": 20,
    "max_daily_bets": 8,
    "max_game_exposure": 0.10,
    "max_correlated_exposure": 0.25,
    "correlation_limit": 0.30,
    "stop_loss": -0.08,
    "trailing_stop_after_profit": 0.15,
    "max_drawdown_allowed": 0.25,
    "risk_of_ruin_threshold": 0.05
  },
  
  "bankroll": 10000,
  "unit_size_base": 100,
  
  "bet_types": {
    "enabled": ["spread", "total", "moneyline"],
    "props_enabled": false,
    "live_betting": false
  },
  
  "performance_tracking": {
    "metrics_to_track": [
      "win_rate",
      "roi",
      "clv",
      "sharp_vs_square_performance",
      "model_calibration_error"
    ],
    "reporting_frequency": "weekly",
    "alert_thresholds": {
      "losing_streak": 7,
      "negative_clv_streak": 5,
      "calibration_drift": 0.1
    }
  },
  
  "backtesting": {
    "start_season": 2019,
    "end_season": 2023,
    "walk_forward_window": 52,
    "retrain_frequency": 4,
    "out_of_sample_test_pct": 0.2
  },
  
  "execution": {
    "mode": "semi_automated",
    "require_confirmation": true,
    "max_latency_ms": 500,
    "retry_attempts": 3,
    "parallel_requests": 10
  },
  
  "logging": {
    "level": "INFO",
    "log_dir": "logs/",
    "rotate_size_mb": 100,
    "backup_count": 10
  }
}
